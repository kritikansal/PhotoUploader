{{extend 'layout.html'}}
<h1>Image: {{=image.title}}</h1>

{{if len(comments):}}
  <h2>Comments</h2><br /><p>
  {{for comment in comments:}}
    <p>{{=comment.author}} says <i>{{=comment.body}}</i></p>
  {{pass}}</p>
{{else:}}
  <h2>No comments posted yet</h2>
{{pass}}<h2>Post a comment</h2>
{{if len(like):}}
    <h2>Likes</h2><br /><p>
    {{for like in like:}}
        <p>{{=like.author}} says <i>{{=like.like}}</i></p>
    {{pass}}</p>
{{else:}}
  <h2>No likes posted yet</h2>
{{pass}}<h2>Like an Image</h2>
{{=form}}
